<div id="login">
<form name="login" method="post">
<table id="login_table" cellspacing="10">
    <tr>
        <td colspan="2"><h4>[% i18n('pLogin_welcome') %]</h4></td>
    </tr>
    <tr>
        <td>[% i18n('pLogin_username') _ ":";  %]</td>
        <td><input class="flat" type="text" name="username" value="" /></td>
    </tr>
    <tr>
        <td>[% i18n('pLogin_password') _ ":";  %]</td>
        <td><input class="flat" type="password" name="password" /></td>
    </tr>
    <tr>
        <td colspan="2" class="hlp_center"><input class="button" type="submit" name="submit" value="[% i18n('pLogin_button') %]" /></td>
   </tr>
   <tr>
        <td colspan="2" class="standout">
            [% tMessage %]
        </td>
   </tr>
</table>
</form>

<script style="text/javascript"><!--
	document.login.fUsername.focus();
// -->
</script>

</div>
